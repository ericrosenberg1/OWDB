# =============================================================================
# WrestlingDB Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
APP_ENV=development
# Set to 'production' for production deployment

APP_SECRET_KEY=your-super-secret-key-change-in-production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# Additional allowed hosts (comma-separated)
# EXTRA_ALLOWED_HOSTS=myserver.local,10.0.0.1

# -----------------------------------------------------------------------------
# Database Settings (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=owdb
DB_USER=owdb
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# For local development with SQLite, leave APP_ENV=development
# The app will automatically use SQLite

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Celery Settings
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
DJANGO_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# External API Keys (all optional - free tiers available)
# -----------------------------------------------------------------------------

# TMDB - The Movie Database (free, requires signup)
# Get key at: https://www.themoviedb.org/settings/api
# TMDB_API_KEY=your-tmdb-api-key

# RAWG - Video Game Database (free tier: 20,000 requests/month)
# Get key at: https://rawg.io/apidocs
# RAWG_API_KEY=your-rawg-api-key

# Google Books API (free tier: 1,000 requests/day)
# Get key at: https://console.cloud.google.com/apis/credentials
# GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Podcast Index (free, requires signup)
# Get keys at: https://api.podcastindex.org/
# PODCAST_INDEX_API_KEY=your-podcast-index-key
# PODCAST_INDEX_API_SECRET=your-podcast-index-secret

# IGDB - Internet Game Database (free via Twitch)
# Get credentials at: https://api-docs.igdb.com/#getting-started
# IGDB_CLIENT_ID=your-twitch-client-id
# IGDB_CLIENT_SECRET=your-twitch-client-secret

# Listen Notes (free tier: 300 requests/month)
# Get key at: https://www.listennotes.com/api/
# LISTEN_NOTES_API_KEY=your-listen-notes-api-key

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage (for image caching and uploads)
# -----------------------------------------------------------------------------
# Create API tokens at: Cloudflare Dashboard > R2 > Manage R2 API Tokens
# R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=owdb-images
R2_ACCOUNT_ID=ab3678edc12d723ab959fb449b095bc6
R2_CUSTOM_DOMAIN=images.wrestlingdb.org

