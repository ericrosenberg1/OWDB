# =============================================================================
# WrestlingDB Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
APP_ENV=development
# Set to 'production' for production deployment

APP_SECRET_KEY=your-super-secret-key-change-in-production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# Additional allowed hosts (comma-separated)
# EXTRA_ALLOWED_HOSTS=myserver.local,10.0.0.1

# -----------------------------------------------------------------------------
# Database Settings (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=owdb
DB_USER=owdb
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# For local development with SQLite, leave APP_ENV=development
# The app will automatically use SQLite

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Celery Settings
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
DJANGO_LOG_LEVEL=INFO
